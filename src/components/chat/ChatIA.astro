<form class="form_model_select">
    <label
        >Escoge un modelo:
        <select
            class="form-select model_selector"
            id="model_selector"
            aria-label="Default select example"
        >
            <option value="smol">SMOL</option>
            <option value="tiny">TinyLLama - 697.24 VRAM</option>
            <option value="gemma_2">Gemma - 1476.52 VRAM</option>
            <option value="gemma">Gemma - 1750.66 VRMA</option>
            <option value="phi">Phi - 3053.97 VRAM</option>
            <option value="hermes">Hermes - 4976.13 VRAM</option>
            <option value="llama">LLama - 5295.7 VRAM</option>
        </select>
    </label>
    <button type="submit">Seleccionar</button>
</form>
<main>
    <ul class="container_messages">
        <li class="message bot">
            <span>Bot</span>
            <p>Hola, en que puedo ayudarte?</p>
        </li>
    </ul>
    <form class="form_chat">
        <input type="text" placeholder="Escribe tu mensaje..." />
        <button type="submit" disabled>Enviar</button>
    </form>
    <small></small>
    <template class="template_message">
        <li class="message">
            <span></span>
            <p></p>
        </li>
    </template>
</main>
<span class="info_load"></span>
<style>
    .form_model_select {
        /* border: 1px solid; */
        width: 100%;
        height: min-content;
        display: flex;
        align-items: flex-end;
        justify-content: space-evenly;
        > label {
            /* border: 1px solid; */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: flex-start;
            gap: 8px;
            font-weight: bold;
            > .model_selector {
                width: 100%;
                height: 40px;
                font-size: 0.9rem;
            }
        }
        > button {
            border: 0;
            height: 40px;
            border-radius: 5px;
            padding: 5px 8px;
            background-color: rgba(68, 136, 238, 0.813);
            color: #fff;
            cursor: pointer;
        }
    }
    main {
        position: relative;
        box-shadow: 0px 0px 15px #0004;
        background-color: #fff;
        border: 0;
        border-radius: 15px;
        padding: 14px 10px;
        width: 400px;
        height: 400px;
        display: flex;
        flex-direction: column;
        gap: 5px;
        > .form_chat {
            width: 100%;
            display: flex;
            margin-bottom: 8px;
            gap: 10px;
            > input {
                flex: 1;
                padding: 3px 5px;
                border-radius: 10px;
            }
            > button {
                border: 0;
                border-radius: 5px;
                padding: 3px 5px;
                background-color: #48e;
                color: #fff;
                cursor: pointer;
                &[disabled] {
                    background-color: #ccc;
                    pointer-events: none;
                }
            }
        }
    }
    .container_messages {
        padding: 0 7px;
        height: 100%;
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 10px;
        overflow-y: auto;
        scroll-behavior: smooth;
        & li {
            width: fit-content;
            display: flex;
            flex-direction: column;
            > span {
                width: 30px;
                height: 30px;
                margin-bottom: 10px;
                border: 0;
                border-radius: 999999999px;
                font-weight: 500;
                font-size: 0.8rem;
                background-color: aqua;
                display: grid;
                place-content: center;
            }
            > p {
                background-color: bisque;
                width: clamp(min-content, min-content, 50%);
                border-radius: 10px;
                padding: 5px;
                font-size: 1rem;
            }
        }
    }
    .bot {
        align-self: flex-start;
        align-items: flex-start;
    }
    .user {
        align-self: flex-end;
        align-items: flex-end;
    }
    small {
        position: absolute;
        bottom: 0;
        left: 0;
        display: none;
        font-size: 1.2rem;
        font-weight: bold;
        color: rgb(183, 8, 8);
    }
    .info_load {
        user-select: none;
        position: fixed;
        left: 30px;
        bottom: 10px;
    }
</style>
<script src="./chat.ts"></script>
